<VBox alignment="CENTER" spacing="20" styleClass="content-container" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="tn.esprit.controllers.CodeAuthorization">
