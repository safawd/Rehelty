            <Label layoutX="101.0" layoutY="33.0" styleClass="title-label" text="Saisissez le code d'autorisation obtenu depuis Google" />

            <!-- Champ pour saisir le code d'autorisation -->
            <TextField fx:id="authCodeField" layoutX="168.0" layoutY="80.0" promptText="Code d'autorisation" styleClass="input-field" />

            <!-- Bouton Valider -->
            <Button layoutX="223.0" layoutY="122.0" onAction="#onSubmitAuthCode" styleClass="submit-button" text="Valider" />

            <!-- Label pour afficher les messages d'erreur ou de succÃ¨s -->
            <Label fx:id="lblMessage" layoutX="168.0" layoutY="155.0" styleClass="message-label" text="" />
        </children>
    </AnchorPane>
</VBox>
